<!-- フォロー解除ボタン ------------------------------------------------------------------>
<%= form_for(current_user, url: user_relationship_path(user_id: @user.id, id: 1), method: :delete, remote: true) do |f| %>
    <%= hidden_field_tag :user_id, @user.id %>
    <%= hidden_field_tag :id, @relationship %>
    <%= f.submit "フォロー解除", class: "btn btn-outline-secondary" %>
<% end %>