<div class="container_wrap">
<div class="page-header">
  <h5>お問い合わせ確認</h5>
</div>

<%= form_with model: @inquiry, url: inquiries_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td>
        <%= f.hidden_field :phone_number %>
        <%= @inquiry.phone_number %>
      </td>
    </tr>
    <tr>
    <th>件名</th>
    <td>
      <%= f.hidden_field :title %>
      <%= @inquiry.title %>
    </td>
  </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :body %>
        <%= simple_format(@inquiry.body) %>
      </td>
    </tr>
  </table>
  <div class="soushin">
  <%= f.submit '送信', :class => 'btn btn-primary confirm-btn' %>
  </div>
  </div>
<% end %>