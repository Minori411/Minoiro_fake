<% provide(:title, "お問い合わせ") %>
<div class="container_wrap">
<%= form_for(@inquiry, url: inquiries_confirm_path) do |f| %>
  <div class="container_contact my-5">
    <h5 class="inquiry-title">お問い合わせフォーム</h5>
    <div class="form-inquiry">
      <%= f.label :name, 'お名前', class: "inquiry-label" %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-inquiry">
      <%= f.label :name, '返信先メールアドレス', class: "inquiry-label" %>
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-inquiry">
      <%= f.label :name, '電話番号', class: "inquiry-label" %>
      <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-inquiry">
      <%= f.label :name, '件名', class: "inquiry-label" %>
      <%= f.text_field :title, autofocus: true, class: 'form-control' %>
    </div>
  
    <div class="form-inquiry">
      <%= f.label :body, 'メッセージ', class: "inquiry-label" %>
      <%= f.text_area :body, size: '10x10', class: 'message-inquiry',:placeholder => "質問などはこちらへお願いします" %>
    </div>
  
    <div class="aiueo">
      <%= f.submit '入力内容確認', class:"waves-light btn inquiry-btn",data: {confirm: "この内容で登録しますか？"} %>
    </div>
  </div>
  </div>
<% end %>

  