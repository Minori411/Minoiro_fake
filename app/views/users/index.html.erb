<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag('/users/index', method: :get) do %> 
    <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <%= user.name %>
    <%= user.email %>
    <%= user.password %>
    <%= user.password_confirmation %>
  <% end %>
</ul>