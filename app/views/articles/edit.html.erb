<%= form_with model: @article, local: true do |f| %>
    <%= f.hidden_field :id, :value => @article.id %>
    <div class="boxbaseP30 blog-box">
        <br>
        <%= f.label :タイトル %><br>
        <%= f.text_field :subject, autofocus: true, :placeholder =>"#{@article.subject}" %>
        <%= f.label :中身 %><br>
        <%= f.text_area :body, :placeholder =>"#{@article.body}" %>
        <div class="post-article">
        <%= f.submit "更新する", class: "waves-effect waves-light btn-large btn-article" %>
        </div>
    </div>
    
<% end %>