
<%= form_with model: @article, url: "/articles/create", local: true do |f| %>
    <span>現在ログイン中のユーザー：<%= current_user.name %></span>

    <div class="boxbaseP30 post-articles">
        <%= f.label :タイトル %><br>
        <%= f.text_field :subject, autofocus: true %>
        <%= f.label :本文 %><br>
        <%= f.text_area :body %>
        <div class="post-article">
            <%= f.submit "投稿する", class: "waves-effect waves-light btn-large btn-article" %>
        </div>
    </div>
    
<% end %>


